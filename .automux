# github.com/indeedhat/automux
# config version
version = 1

session_id = "barista"

window "Editor" {
    exec = "vim"
    focus = true
}

window "Shell" {
    exec = "air"
    split {
        exec = "npx @tailwindcss/cli -i ./assets/tailwind/app.css -o ./assets/css/app.css --watch"
    }
}

